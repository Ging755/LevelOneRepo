@model List<LevelOne.Models.Item>

@{
    int count = 0;
}
<div class="col-sm-2">
    @Html.Action("CategoryPicker");
</div>
<div class="col-sm-10">
    <div class="container-fluid" style="padding-top: 20px">
        <h1 style="text-align:center">BEST DEALS BUY NOW</h1>
            @foreach (var item in Model)
            {
                if(count == 0)
                {
                    count++;
                    @:<div class="row">
                }
                <div class="col-sm-4">
                    <div class="panel panel-danger">
                        <div class="panel-heading">@item.Name - @item.Price HRK</div>
                        <div class="panel-body"><img src="~/Images/@item.ImgUrl" class="img-responsive" style="width:100%" alt="Image"></div>
                        <div class="panel-footer">@Html.ActionLink(" ", "AddToCart", "Home", new { item.Id, ViewBag.page, ViewBag.search, ViewBag.priceorder, ViewBag.categoryid }, new { @class = "glyphicon glyphicon-shopping-cart" })</div>
                    </div>
                </div>
                if(count == 3)
                {
                    count = 0;
                    @:</div>
                }
            }
    </div><br>
</div>



