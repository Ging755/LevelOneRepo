@model List<LevelOne.Models.Item>

<div class="container-fluid text-center">
    <h1>Cart</h1>
    @if (Model == null)
    {
        <h2>You have nothing in your cart</h2>
    }
    else
    {
        <ul class="list-group">
            @foreach (var item in Model)
            {
                <li class="list-group-item">@item.Name - @item.Price HRK @Html.ActionLink(" Remove ", "RemoveFromCart", new { id = item.Id }, new { @class = "glyphicon glyphicon-remove" })</li>
            }
            <li class="list-group-item">Total Price : @ViewBag.totalprice @Html.ActionLink(" Order ", "Create", "Orders", new { }, new { @class="glyphicon glyphicon-credit-card"})</li>
        </ul>
    }
</div>

